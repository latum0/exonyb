

generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
enum Role {
  ADMIN
  MANAGER
}

enum Permission {
  AGENT_DE_STOCK
  CONFIRMATEUR
  SAV
}

model Users {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role         Role      
  permissions  Json?
  phone   String @unique
  refreshToken String? 
   emailVerified  Boolean @default(false) 
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
